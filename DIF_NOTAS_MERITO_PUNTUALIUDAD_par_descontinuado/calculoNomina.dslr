rule "DiFERENCIAS TIEMPO EXTRA"
    salience 40
    when
        Pago
        -nomina ordinaria
        -operativo
        -tiene PERCEPCION codigo "DT"
    then
         Asignar PERCEPCION codigo "T0" con valor (MONTO_CPTO "P" "DT") 
         Asignar PERCEPCION codigo "2E" con valor (MONTO_CPTO "P" "DT") 
         Asignar DEDUCCION codigo "IT" con valor isr((MONTO_CPTO "P" "AM") + ((MONTO_CPTO "P" "DT") )) - (MONTO_CPTO "P" "IM")
end

rule "DiFERENCIAS DIAS ECONOMICOS"
    salience 40
    when
        Pago
        -nomina ordinaria
        -operativo
        -tiene PERCEPCION codigo "DF"
    then
         Asignar PERCEPCION codigo "67" con valor (MONTO_CPTO "P" "DF") 
         Asignar PERCEPCION codigo "6E" con valor (MONTO_CPTO "P" "DF") 
         Asignar DEDUCCION codigo "IT" con valor isr((MONTO_CPTO "P" "AM") + ((MONTO_CPTO "P" "DF") )) - (MONTO_CPTO "P" "IM")
end

